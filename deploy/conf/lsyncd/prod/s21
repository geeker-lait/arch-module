-- centos: /etc/lsyncd.conf   ubuntu: /etc/lsyncd/lsyncd.conf.lua
-- centos 启动: systemctl start lsyncd   停止:systemctl stop lsyncd  自启动: systemctl enable lsyncd   nodaemon: lsyncd -nodaemon /etc/lsyncd.conf
-- ubuntu 启动: /etc/init.d/lsyncd restart
-- sync{default.rsyncssh, source="/deploy", host="192.168.1.188", targetdir="/deploy"}
settings {
  logfile    = "/deploy/logs/lsyncd.log",
  statusFile = "/deploy/logs/lsyncd.status",
  insist = true,
  statusInterval = 10,
  inotifyMode = "CloseWrite or Modify",
  maxDelays  = 10
}
sync {
  default.rsyncssh,
  source="/deploy/data/mysql",
  host="s11.tastelifer.com",
  targetdir="/deploy/data/mysql_backup",
  delete= false,
  delay = 10,
  rsync = {
    archive = true,
    compress = false,
    whole_file = false
  },
  ssh = {
    port = 22
  }
}